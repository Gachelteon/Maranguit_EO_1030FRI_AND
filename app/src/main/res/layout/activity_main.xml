<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/almostBlack"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <!-- Input Display (for showing expressions like 1 + 2) -->
        <TextView
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_default"
            android:textColor="@android:color/holo_blue_dark"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textEnd"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@id/resultText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Result Display (for showing the result after the expression is evaluated) -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input_default"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/buttonClear"
            android:textColor="@color/red"
            android:onClick="allClearAction"
            android:text="C"/>
        <Button
            android:id="@+id/buttonDelete"
            style="@style/buttonNumber"
            android:textColor="@color/red"
            android:text="âŒ«"/>
        <Button
            android:id="@+id/buttonDivide"
            style="@style/buttonOperator"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/button7"
            style="@style/buttonNumber"
            android:text="7"/>
        <Button
            android:id="@+id/button8"
            style="@style/buttonNumber"
            android:text="8"/>
        <Button
            android:id="@+id/button9"
            style="@style/buttonNumber"
            android:text="9" />
        <Button
            android:id="@+id/buttonMultiply"
            style="@style/buttonOperator"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/button4"
            style="@style/buttonNumber"
            android:text="4"/>
        <Button
            android:id="@+id/button5"
            style="@style/buttonNumber"
            android:text="5"/>
        <Button
            android:id="@+id/button6"
            style="@style/buttonNumber"
            android:text="6" />
        <Button
            android:id="@+id/buttonSubtract"
            style="@style/buttonOperator"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/button1"
            style="@style/buttonNumber"
            android:text="1"/>
        <Button
            android:id="@+id/button2"
            style="@style/buttonNumber"
            android:text="2"/>
        <Button
            android:id="@+id/button3"
            style="@style/buttonNumber"
            android:text="3" />
        <Button
            android:id="@+id/buttonAdd"
            style="@style/buttonOperator"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/buttonPeriod"
            style="@style/buttonNumber"
            android:text="."/>
        <Button
            android:id="@+id/button0"
            style="@style/buttonNumber"
            android:text="0"/>

        <Button
            android:id="@+id/buttonEquals"
            style="@style/buttonNumber"
            android:layout_weight="2"
            android:background="@color/orange"
            android:onClick="equalsAction"
            android:text="="
            android:textColor="#455A64"
            android:textSize="40sp" />

    </LinearLayout>

</LinearLayout>